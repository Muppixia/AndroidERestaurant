<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/home_welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/nameResto"
        app:layout_constraintEnd_toEndOf="@+id/nameResto"
        app:layout_constraintStart_toStartOf="@+id/nameResto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameResto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/autour_one"
        android:text="@string/home_nameresto"
        android:textColor="#131212"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp" />

    <Button
        android:id="@+id/homeStarters"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginTop="303dp"
        android:text="@string/home_starters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameResto" />

    <Button
        android:id="@+id/homeDishes"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="@string/home_dishes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeStarters" />

    <Button
        android:id="@+id/homeDeserts"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="@string/home_deserts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeDishes" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="330dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chef_italien" />
</androidx.constraintlayout.widget.ConstraintLayout>